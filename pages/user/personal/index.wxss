.container {
  color: rgb(34, 24, 21);
  height: 100%;
}

.user-info {
  padding: 80rpx 40rpx 70rpx 40rpx;
  background: linear-gradient(to bottom, #212121 50%, #f5f5f5 50%);
}
.user-info .user-box{
  padding: 75rpx 50rpx 30rpx 50rpx;
  border-radius: 8rpx;
  box-shadow: 0 1px 4px 0 #999999;
  position: relative;
  background: #fff;
}

.user-info .user-avatar {
  position: absolute;
  top: -70rpx;
  left: 50%;
  margin-left: -70rpx;
  z-index: 2;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  opacity: 0.95;
}
.user-info .user-box .user-name{
  border-bottom: 1px solid #efefef;
  padding-bottom: 20rpx;
  margin-bottom: 17rpx;
}
.user-info .user-box .user-name text{
  display: block;
  text-align: center;
}
.user-info .user-box .user-text .user-title,
.user-info .user-box .user-text .user-desc{
  text-align: left;
}
.user-info .user-box .user-text .user-title {
  z-index: 2;
  font-size: 14px;
  color: #4A4A4A;
}
.user-info .user-box .user-text .user-desc,
.user-info .user-box .user-name .user-desc{
  font-size: 12px;
  color: #999999;
}
.user-info .user-box .user-text .user-desc{
  display: inline-block;
  font-size: 14px;
  width: 160rpx;
}

/*用户操作  */
.action-list {
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #fff;
}

.action-list .action-cell {
  display: flex;
  flex-direction: row;
  /* align-items: center; */
  height: 91rpx;
  padding-left: 30rpx;
  border-bottom: 1px solid #efefef;
  padding-top: 16rpx;
  box-sizing: border-box;
  padding-right: 50rpx;
}

.action-list .action-cell:first-child {
  border-top: 1px solid #efefef;
}

.action-list .action-cell .action-icon {
  width: 60rpx;
  height: 60rpx;
}

.action-list .action-cell .action-text {
  margin-left: 22rpx;
  line-height: 60rpx;
}

