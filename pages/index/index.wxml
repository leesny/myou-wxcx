<import src="../templates/navbar/navbar.wxml" />
<import src="../templates/product/product.wxml" />
<view class="index">
  <!-- 搜索框 -->
  <view class="input-box fixed">
    <input readonly class="serarch-input" type="text" name="" placeholder="搜索商品" />
  </view>
  <!--  轮播  -->
  <view class="banner-box">
    <swiper wx:if="imgUrls && imgUrls.length" indicator-dots="true" indicator-color="{{indicatorcolor}}" indicator-active-color="{{indicatoractivecolor}}" autoplay="true" interval="{{interval}}" duration="{{duration}}" circular="true">
      <block wx:for="{{imgUrls}}" wx:key="{{index}}">
        <swiper-item>
          <image src="{{item.url}}" class="slide-image" width="100%" mode="widthFix" class="fade_in" />
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!--  分类  -->
  <!-- <view class="classify-box">
>>>>>>> .r239
    <view class='classify-item' wx:for="{{navBars}}">
      <template is="navbarItem" data="{{...item,imgBasePath}}" />
    </view>
  </view> -->
  <view class='classify-box'>
    <scroll-view class="scroll-view_H" scroll-x>
      <view class="scroll-view-item_H" wx:for="{{navBars}}">
        <template is="navbarItem" data="{{...item,imgBasePath}}" />
      </view>
    </scroll-view>
  </view>
  <!-- <scroll-view class="scroll-view_H" scroll-x="true" style="width: 100%;">
    <view class='scroll-view-item_H' wx:for="{{navBars}}">
      <template is="navbarItem" data="{{...item,imgBasePath}}"/> 
    </view>
  </scroll-view> -->
  <!--  消息轮播  -->
  <swiper class="new-swiper" vertical="true" autoplay="true" interval="{{interval}}" duration="{{duration}}" circular="true">
    <block wx:for="{{newsList}}" wx:key="{{index}}">
      <swiper-item>
        <view class='new-item'>
          <view class="ellipsis">{{item.msgName}}</view>
        </view>
      </swiper-item>
    </block>
  </swiper>
  <!--  其他功能操作  -->
  <view class="operation-box">
    <view class='operation-item' wx:for="{{opeartionList}}">
      <template is="navbarItem" data="{{...item}}" />
    </view>
  </view>
  <!--  产品列表  -->
  <view class='product-box'>
    <view class='procuct-item' wx:for="{{productsList}}">
      <template is="productItem" data="{{...item,imgBasePath}}" />
    </view>
  </view>
</view>
<!-- 引入图片预加载组件 -->
<import src="../templates/img-loader/img-loader.wxml" />
<template is="img-loader" data="{{ imgLoadList }}"></template>